@helper Include(String VirtualPath)
{
    System.Web.Mvc.HtmlHelperExtentions.ScriptFile(HttpContext.Current.Items, VirtualPath);
}

@helper RenderAll(Boolean useBundles = true)
{
    @System.Web.Mvc.HtmlHelperExtentions.RenderScripts(HttpContext.Current.Items, useBundles);
}

@helper RenderFormat(String Format, params String[] Paths)
{
    @System.Web.Optimization.Scripts.RenderFormat(Format, Paths);
}

@helper Render(params String[] Paths)
{
    @System.Web.Optimization.Scripts.Render(Paths);
}

@helper Url(String VirtualPath)
{
    @System.Web.Optimization.Scripts.Url(VirtualPath);
}
